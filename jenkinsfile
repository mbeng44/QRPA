pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://'
            }
        }
        stage('Static Code Analysis') {
            steps {
                // Replace with your static code analysis tool commands
                sh 'sonar-scanner'
            }
        }
        stage('Build Docker Image') {
            steps {
                docker.build("your-image-name:${BUILD_ID}")
            }
        }
        stage('Push Docker Image') {
            steps {
                docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-creds') {
                    docker.image("your-image-name:${BUILD_ID}").push()
                }
            }
        }
    }
}
