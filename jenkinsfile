pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS_ID = 'c2309f0c-9117-4f86-b889-0643466815a6' 
        DOCKER_IMAGE_NAME = 'mbeng44/jenkins/jenkins'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Static Code Analysis') {
            steps {
                // Example of SonarQube Scanner configuration
                script {
                    // sonarScanner {
                    //     // SonarQube configuration
                    //     projectKey: 'your-project-key',
                    //     server: 'SonarQube-Server'
                    // }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${jenkins/jenkins}:latest")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', c2309f0c-9117-4f86-b889-0643466815a6) {
                        docker.image("${jenkins/jenkins}:latest").push()
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}

